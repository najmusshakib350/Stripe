  body
    //Header 
    include _header

    //Content
    block content
      .container
        .row
          .col-sm-12.col-6
            form.form-submit
              .form-group
                select#select.form-control
                  option(value='cash') Cash
                  option(value='card') Card
              .form-group
                input#email.form-coltrol(type='email' placeholder='Enter your email')
              .form-group
                input#name.form-coltrol(type='text' placeholder='Enter your name')
              div#card-element
              button.btn.btn-primary.submitbtn(type='submit') Submit

    //Footer
    include _footer
